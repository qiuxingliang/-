.big .cart {
  width: 100%;
  height: 110rpx;
  border: 1px solid #FFFFFF;
  position: fixed;
  bottom: 0;
  background-color: #FFFFFF;
  z-index: 1;
}
.big .cart .che > ._li {
  float: left;
  list-style: none;
  font-size: 30rpx;
}
.big .cart .che .gou {
  border: 1px solid #ffaa00;
  width: 200rxp;
  height: 80rpx;
  background-color: #ffaa00;
  color: #FFFFFF;
  padding-left: 85rpx;
  padding-right: 40rpx;
  margin-top: 15rpx;
  margin-left: 100rpx;
  border-radius: 40rpx 0 0 40rpx;
  line-height: 80rpx;
}
.big .cart .che .mai {
  border: 1px solid #ff0000;
  width: 200rxp;
  height: 80rpx;
  color: #FFFFFF;
  padding-left: 40rpx;
  padding-right: 85rpx;
  background-color: #ff0000;
  margin-top: 15rpx;
  border-radius: 0 40rpx 40rpx 0;
  line-height: 80rpx;
}
.big .img {
  width: 500rpx;
  height: 500rpx;
  margin-top: 50rpx;
  margin-left: 120rpx;
  box-shadow: 15rpx 20rpx 20rpx 5rpx rgba(156, 75, 0, 0.6);
  border-radius: 30rpx;
  margin-bottom: 30rpx;
}
.big .first {
  width: 720rpx;
  height: 200rpx;
  border: 1rpx solid #E7C276;
  margin-left: 15rpx;
  border-radius: 30rpx;
}
.big .first .price {
  font-size: 70rpx;
  color: #9c4b00;
}
.big .first .brief {
  font-weight: 600;
  margin-left: 10rpx;
  font-size: 35rpx;
  letter-spacing: 5rpx;
}
.big .second {
  margin: 0rpx auto;
  margin-top: 25rpx;
  width: 720rpx;
  height: 200rpx;
  border: 1rpx solid #E7C276;
  border-radius: 30rpx;
}
.big .second .chanpin {
  position: fixed;
  bottom: 0rpx;
  height: 960rpx;
  padding: 10rpx 3%;
  margin: 0rpx auto 0rpx auto;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  z-index: 2;
}
.big .second .second1 {
  font-size: 35rpx;
  margin-top: 25rpx;
  width: 720rpx;
  height: 200rpx;
  border-radius: 30rpx;
}
.big .second .second1 .chanpin1 {
  margin-top: 40rpx;
}
.big .second .fahuo, .big .second .baozhang, .big .second .canshu {
  color: #8A8A8A;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.big .third {
  margin-top: 25rpx;
  width: 720rpx;
  height: 800rpx;
  border: 1rpx solid #E7C276;
  margin-left: 15rpx;
  border-radius: 30rpx;
}
.big .third .wenzi {
  color: #9c4b00;
  font-weight: 600;
  letter-spacing: 5rpx;
  font-size: 40rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.big .prompt {
  margin-top: 25rpx;
  width: 720rpx;
  height: 180rpx;
  margin-left: 15rpx;
  border-radius: 30rpx;
}
.big .prompt .shang, .big .prompt .xia {
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #8A8A8A;
}
.big .prompt .shang {
  font-size: 40rpx;
}
.big .detail {
  height: 88rpx;
  /* width: 100%; */
  text-indent: 1em;
  background-image: linear-gradient(to right, #f0bb88, #ffffff);
  border-top: solid 5rpx #9C4B00;
  border-left: solid 5rpx #9C4B00;
  margin: 15rpx;
  font-size: 35rpx;
  line-height: 80rpx;
  color: #9c4b00;
  letter-spacing: 10rpx;
}
.big .use {
  width: 700rpx;
  white-space: pre-wrap;
  height: 100%;
  border: 1rpx solid #E7C276;
  margin-left: 15rpx;
  margin-bottom: 120rpx;
  padding: 10rpx;
  border-radius: 30rpx;
}
.big .use .box {
  display: flex;
  flex-direction: row;
  white-space: pre-wrap;
}
.big .use .box .img_1 {
  width: 700rpx;
  height: 380rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
}
.big .use .box .box_1 {
  display: flex;
  flex-direction: column;
  white-space: pre-wrap;
}
.big .use .box .box_1 .name {
  text-align: center;
  font-size: 70rpx;
  color: #9c4b00;
}
.big .use .box .box_1 .alias {
  white-space: pre-wrap;
  word-break: break-all;
  font-weight: 600;
}
.big .use .explain {
  margin-left: 7rpx;
  margin-top: 30rpx;
  white-space: pre-wrap;
  letter-spacing: 5rpx;
}

