.header {
  padding: 30rpx 30rpx 40rpx 30rpx;
  background-color: #dddddd;
  border-bottom: solid 1rpx #DDDDDD;
  /* background: url(../../static/2.jpg); */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.face {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
