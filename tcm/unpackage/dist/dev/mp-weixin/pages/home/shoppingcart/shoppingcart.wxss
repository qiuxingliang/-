.big .item .name {
  margin-left: 0rpx;
  font-size: 50rpx;
  color: #9c4b00;
}
.big .item .total {
  width: 700rpx;
  margin: 30rpx auto;
  background-color: #fffef6;
  border-radius: 20rpx;
  display: flex;
}
.big .item .total .zuo {
  display: flex;
}
.big .item .total .zuo .icon {
  width: 250rpx;
  height: 250rpx;
  border-radius: 30rpx;
}
.big .item .total .you {
  padding: 20rpx;
}
.big .item .total .you .brief {
  font-size: 30rpx;
}
.big .item .total .you .price {
  font-size: 45rpx;
  color: #9C4B00;
}
.big .qujiesuan {
  width: 100%;
  height: 110rpx;
  border: 1px solid #FFFFFF;
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0;
  background-color: #FFFFFF;
}
.big .qujiesuan .jiesuan {
  border-radius: 30rpx;
  color: #FFFFFF;
  margin-left: 120rpx;
  width: 300rpx;
  height: 60rpx;
  background-color: #ff0000;
  border: 1px solid #ff0000;
  padding-left: 200rpx;
  padding-top: 10rpx;
}
.big .else {
  margin-left: 30rpx;
  margin-top: 600rpx;
  font-size: 50rpx;
  color: #9c4b00;
